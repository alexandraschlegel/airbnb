<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(<%= image_path "pretty2.jpg" %>);">
  <div class="container">
    <h1><strong> One  Fine  Stay </strong> </h1>
    <p> <strong>Stay in your dream locations because you're worth it!</strong></p>
      <%= form_tag flats_path, method: :get do %>
    <div class="search-container">
        <%= text_field_tag :query,
          params[:query]
        %>
      <% end %>
      <div class="search">
        <%= submit_tag "Search" %>
      </div>
    </div>
    <%#= link_to 'All flats', flats_path, class: "btn btn-primary custom-button"   %>
  </div>
</div>



