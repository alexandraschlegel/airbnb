

<div class="usercontainer">

  <div class="card" style="width: 50rem;">

    <%#= image_tag @flat.photo,class: "card-img-top", alt: "alttext" %>
    <div class="card-body" style="padding-bottom: 30px" >
      <h5 class="card-title">More details</h5>

      <%#= image_tag @flat.user.photo, class: "avatar", alt: “avatar” %>
      <p><strong>Name:</strong> <%= @flat.name %>
      <p><strong>Address:</strong> <%= @flat.address %>
      <p><strong>Capacity:</strong> <%= @flat.capacity %>

      <p><strong>Facilities:</strong> <%= @flat.facilities%>
      <p><strong>Rating</strong> <% @flat.rating.times do%>
      <i class="fas fa-star" style="color:gold;"></i>
      <% end %>
      <div class="confirmation" style="padding-right: 30px">
        <div>
          <%= link_to "ALL   ICONS", flats_path, class: "btn btn-primary px-4 mr-3" %>
          <%= link_to "BOOK NOW", new_flat_booking_path(@flat.id), class: "btn btn-primary px-4" %>

        </div>
        <p class="price-font"><strong>Price: £</strong><strong><%= @flat.price %></strong>
      </div>
    </div>
  </div>
</div>
