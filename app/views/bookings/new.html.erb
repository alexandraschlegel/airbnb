<h1> Make a new Booking <%=@flat.name %></h1>
<div class="container">
  <div class= "row justify-content-around">
    <div class="col-6">
      <%= simple_form_for [@flat, @booking] do |f| %>
        <%= f.input :address %>
        <%= f.input :capacity %>
        <%= f.input :price %>
         <%= f.input :ingredient_id, collection: Ingredient.all %>
        <%= f.submit "Make a booking", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
