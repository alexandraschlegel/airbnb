<h1> Edit your booking <%=@flat.name %></h1>
  <div class="container">
    <div class= "row justify-content-around">
      <div class="col-6">
       <%= simple_form_for(@flat, @booking) do |f| %>
        <%= f.input :date_from %>
        <%= f.input :date_to %>
       <%= f.submit "Edit booking", class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>
